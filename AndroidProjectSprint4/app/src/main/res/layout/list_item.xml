            <!--android:layout_marginTop="35dp"-->
            <!--android:layout_toRightOf="@+id/buttonAccept"-->
            <!--android:src="@drawable/ic_cancel_black_24dp" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>